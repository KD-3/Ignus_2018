<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <ImageView
                    android:id="@+id/frag_ed2_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars" />
                <TextView
                    android:id="@+id/frag_ed2_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55000000"
                    android:text="Event Name"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#F6F6F6"/>
            </FrameLayout>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#000"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18sp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_time"
                        android:tint="#000" />
                    <TextView
                        android:id="@+id/frag_ed2_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Time"
                        android:textSize="16sp"
                        tools:text="@tools:sample/date/mmddyy"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/temp"
                        android:layout_width="18sp"
                        android:layout_height="18sp"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_gmap"
                        android:tint="#000" />
                    <TextView
                        android:id="@+id/frag_ed2_venue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/temp"
                        android:layout_toStartOf="@+id/frag_ed2_register"
                        android:clickable="true"
                        android:focusable="true"
                        android:text="Venue"
                        android:textSize="16sp"
                        android:maxLines="1"
                        tools:text="@tools:sample/cities"/>
                    <Button
                        android:id="@+id/frag_ed2_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Register Event"
                        android:textColor="#55D"
                        android:textAlignment="viewEnd"
                        android:maxLines="1"
                        style="?android:attr/borderlessButtonStyle"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>